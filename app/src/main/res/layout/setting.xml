<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Sound"
            android:textSize="40dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompatSound"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:minHeight="48dp"
            android:thumb="@drawable/thumb" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textSize="40dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompatMusic"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:minHeight="48dp"
            android:thumb="@drawable/thumb" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/circle_red2" />

            <Button
                android:id="@+id/prevCharacter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/cirle_red1"
                android:gravity="center"
                android:text="prev"
                android:textColor="@color/white"
                android:textFontWeight="1000"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView_character"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="62dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/circle_red2" />

            <Button
                android:id="@+id/nextCharacter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/cirle_red1"
                android:gravity="center"
                android:text="next"
                android:textColor="@color/white"
                android:textFontWeight="1000"
                android:textSize="20dp"></Button>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>